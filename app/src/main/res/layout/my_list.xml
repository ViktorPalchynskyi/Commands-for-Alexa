<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/list_view_image"
        android:layout_width="27.33dp"
        android:layout_height="27.33dp"
        android:layout_gravity="center"
        android:layout_marginLeft="13.33dp"
        android:layout_marginTop="11.33dp"
        android:layout_marginBottom="11.33dp"
        app:srcCompat="@drawable/main" />

    <TextView
        android:id="@+id/list_view_title"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="11.33dp"

        android:layout_marginBottom="11.33dp"
        android:layout_weight="1"
        android:fontFamily="@font/roboto"
        android:text="@string/main"
        android:textColor="#000000"
        android:textSize="13.33dp" />

    <ImageView
        android:id="@+id/arrow_image"
        android:layout_width="8.33dp"
        android:layout_height="17.48dp"
        android:layout_marginRight="13.33dp"
        android:layout_gravity="center"
        android:layout_weight="0"
        app:srcCompat="@drawable/arrow" />
</LinearLayout>